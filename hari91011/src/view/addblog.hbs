    <div class="container">
        <form method="POST" action="/blogsubmit">
            <p class="fs-3 fw-bold text-center mt-5">ADD MY PROJECT</p>
            <div class="mb-3">
                <label class="form-label" for="pjname">Project Name</label>
                <input class="form-control" type="text" name="pjname" id="pjname">
            </div>

            <label class="form-label" for="date">Start-Date | End-Date</label>
            <div class="input-group mb-3">
                <input class="form-control" type="date" placeholder="startdate" name="startdate" id="startdate">
                <input class="form-control" type="date" name="enddate" placeholder="enddate" id="enddate">
            </div>

            <div class="mb-3">
                <pclass="form-label">Description</p>
