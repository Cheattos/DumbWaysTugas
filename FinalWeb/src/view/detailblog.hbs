<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Detail Blog</title>
    <link rel="stylesheet" href="/css/yublog.css">
    <script src="https://kit.fontawesome.com/a96498589b.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <nav class="listitem">
        <ul>
            <li>
                <div class="logom" id="logo" onclick="toggleMenu()">
                    <img src="/gambar/brandred.png" alt="Logo" class="logo-img">
                </div>
            </li>
            <li>
                <div class="listmenu" id="listmenu">
                    <ul>
                        <li>
                            <p><a href="/">Home</a></p>
                        </li>
                        <li>
                            <p><a href="/myproject">My Project</a></p>
                        </li>
                        <li>
                            <p><a href="/testimoni">Testimoni</a></p>
                        </li>
                        <li>
                            <p><a href="/myblog">Blog</a></p>
                        </li>
                        <li>
                            <p><a href="/contact">Contact Me</a></p>
                        </li>
                        {{#if isLogin}}
                        <li>
                            <p><a href="/logout">Login</a></p>
                        </li>
                        {{else}}
                        <li>
                            <p><a href="/loginform">Login</a></p>
                        </li>
                        <li>
                            <p><a href="/registerform">Register</a></p>
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </li>
        </ul>
    </nav>

    <div class="nu">
        <nav class="navutama navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand ms-5" href="/">
                    <img src="/gambar/brandred.png" alt="Logo" class="logo-img">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/myproject">My Project</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/testimoni">Testimoni</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/myblog">Blog</a>
                        </li>
                        {{#if isLogin}}
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                        {{else}}
                        <li class="nav-item">
                            <a class="nav-link" href="/loginform">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/registerform">Register</a>
                        </li>
                        {{/if}}
                    </ul>
                    <button type="button" class="btn btn-info me-3">
                        <a class="nav-link" href="/contact">Contact Me</a>
                    </button>
                </div>
            </div>
        </nav>
    </div>

    <div class="container mb-5 mt-5"
        style="border-radius:10px; padding: 10px; box-shadow: 10px 0 10px rgb(202, 201, 201);">
        <p class="fw-bold fs-1 mb-5 mt-3 text-center">{{ blogs.title }}</p>
        <div class="row mb-3">
            <div class="col col-sm-12 col-md-12 col-xl-8">
                <img src="/uploads/{{ blogs.images }}" class="card-img-top" alt="{{ blogs.images }}">
            </div>
            <div class="col col-sm-12 col-md-12 col-xl-4">
                <p class="fs-5 fw-bold">DURATION</p>
                <i class="fa-solid fa-calendar-days fa" style="color: #000000;">&nbsp; {{ blogs.startdate }} - {{
                    blogs.enddate }}</i><br>
                <i class="fa-regular fa-clock fa mb-5" style="color: #000000;">&nbsp; {{ blogs.duration }}</i>

                <p class="fs-5 fw-bold">TECHNOLOGIES</p>
                <p class="fs-6 mb-5">{{ blogs.technologies }}</p>

            </div>
        </div>
        <div class="row">
            <p class="card-text">{{ blogs.description }}</p>
        </div>
    </div>

    <script src="/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>

    <script>
        const description = {{ blogs.description }};
        const modifiedDescription = description.replace(/\n/g, '<br>');
        $('.card-text').html(modifiedDescription);
    </script>
</body>

</html>