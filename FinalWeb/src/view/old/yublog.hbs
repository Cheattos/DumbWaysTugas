                        <a class="nav-link" href="/contact">Contact Me</a>
                    </button>
                </div>
            </div>
        </nav>
    </div>

    <div class="container">
        <a href="/addblog"><button type="button" class="btn btn-primary mt-5">Add Blog</button></a>
        <div class="card mb-3 mt-5" style="max-width: auto;">
            {{#each blogss }}
            <div class="row g-5 mb-3">
                <div class="col-xl-5 col-md-4">
                    <img src="/gambar/arre-t1.jpg" class="img-fluid rounded-start" alt="are">
                </div>
                <div class="col-xl-7 col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ this.projectname }}</h5>
                        <p>{{ this.startdate }} | {{ this.enddate }}</p>
                        <p class="card-text">{{ this.description }}</p>
                        <p>{{ this.technologies }}</p>
                        <p class="card-text"><small class="text-body-secondary">{{ this.duration }}</small></p>
                        <a href="/edit/{{ @index }}">Edit</a> <!-- Add edit link with index -->
                        <a href="javascript:void(0);" onclick="deleteBlog({{ @index }})">Delete</a>
                        <!-- Add delete link with index -->
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <script src="/js/myblog.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
