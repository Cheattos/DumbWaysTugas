                        <a class="nav-link" href="/loginform">Login</a>
                    </button>
                </div>
            </div>
        </nav>
    </div>

    <div class="container">
        <form method="POST" action="/update/{{blog.id}}">
            <!-- Update URL with the entry's ID -->
            <p class="fs-3 fw-bold text-center mt-5">EDIT PROJECT</p>
            <div class="mb-3">
                <label class="form-label" for="projectname">Project Name</label>
                <input class="form-control" type="text" name="projectname" id="projectname"
                    value="{{ blog.projectname }}">
            </div>

            <label class="form-label" for="date">Start-Date | End-Date</label>
            <div class="input-group mb-3">
                <input class="form-control" type="date" placeholder="startdate" name="startdate" id="startdate"
                    value="{{ blog.startdate }}">
                <input class="form-control" type="date" name="enddate" placeholder="enddate" id="enddate"
                    value="{{ blog.enddate }}">
            </div>

            <div class="mb-3">
                <p class="form-label">Description</p>
                <textarea class="form-control" name="description" id="description" cols="30" rows="10"
                    style="resize: none;">{{ blog.description }}</textarea>
            </div>

            <div class="mb-3">
                <label class="form-label" for="technologies">Technologies</label><br>
                <table>
                    <tr>
                        <td>
                            <input type="checkbox" id="nodejsCheckbox" name="selectedTechnologies" value="Node JS" {{#if
                                (inArray "Node JS" blog.technologies)}}checked{{/if}}> Node JS<br>
                            <input type="checkbox" id="reactjsCheckbox" name="selectedTechnologies" value="React JS"
                                {{#if (inArray "React JS" blog.technologies)}}checked{{/if}}> React JS<br>
                        </td>
                        <td>
                            <input type="checkbox" id="nextjsCheckbox" name="selectedTechnologies" value="Next JS" {{#if
                                (inArray "Next JS" blog.technologies)}}checked{{/if}}> Next JS<br>
                            <input type="checkbox" id="typescriptCheckbox" name="selectedTechnologies"
                                value="TypeScript" {{#if (inArray "TypeScript" blog.technologies)}}checked{{/if}}>
                            TypeScript<br>
                        </td>
                    </tr>
                </table>
            </div>
            <button type="submit" class="btn btn-primary mb-5">Update</button>
        </form>
    </div>

    <script src="/js/myblog.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
