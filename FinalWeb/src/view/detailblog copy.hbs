<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Detail Blog</title>
    <link rel="stylesheet" href="/css/yublog.css">
    <script src="https://kit.fontawesome.com/a96498589b.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <nav class="listitem">
        <ul>
            <li>
                <div class="logom" id="logo" onclick="toggleMenu()">
                    <img src="/gambar/brandred.png" alt="Logo" class="logo-img">
                </div>
            </li>
            <li>
                <div class="listmenu" id="listmenu">
                    <ul>
                        <li>
                            <p><a href="/">Home</a></p>
                        </li>
                        <li>
                            <p><a href="/myproject">My Project</a></p>
                        </li>
                        <li>
                            <p><a href="/testimoni">Testimoni</a></p>
                        </li>
                        <li>
                            <p><a href="/myblog">Blog</a></p>
                        </li>
                        <li>
                            <p><a href="/contact">Contact Me</a></p>
                        </li>
                        {{#if isLogin}}
                        <li>
                            <p><a href="/logout">Login</a></p>
                        </li>
                        {{else}}
                        <li>
                            <p><a href="/loginform">Login</a></p>
                        </li>
                        <li>
                            <p><a href="/registerform">Register</a></p>
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </li>
        </ul>
    </nav>

    <div class="nu">
        <nav class="navutama navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand ms-5" href="/">
                    <img src="/gambar/brandred.png" alt="Logo" class="logo-img">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/myproject">My Project</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/testimoni">Testimoni</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/myblog">Blog</a>
                        </li>
                        {{#if isLogin}}
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                        {{else}}
                        <li class="nav-item">
                            <a class="nav-link" href="/loginform">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/registerform">Register</a>
                        </li>
                        {{/if}}
                    </ul>
                    <button type="button" class="btn btn-info me-3">
                        <a class="nav-link" href="/contact">Contact Me</a>
                    </button>
                </div>
            </div>
        </nav>
    </div>

    <div class="container mt-5">
        <div class="card mb-3">
            <img src="/uploads/{{ blogs.images }}" style="height: 600px;" class="card-img-top" alt="{{ blogs.images }}">
            <div class="card-body">
                <p class="card-title fs-2 fw-bold">{{ blogs.title }}</>
                <p class="card-text fs-6">{{ blogs.name }} | {{ blogs.duration }} lalu | {{ blogs.technologies }}</p>
                <p class="card-text">{{ blogs.description }}</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>

    <script>
        const description = {{ blogs.description }};
        const modifiedDescription = description.replace(/\n/g, '<br>');
        $('.card-text').html(modifiedDescription);
    </script>
</body>

</html>